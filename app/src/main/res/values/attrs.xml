<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SpannedGridLayoutManager">
        <attr name="android:orientation" />
        <attr name="spanCount" />
        <attr name="aspectRatio" format="string" />
    </declare-styleable>
    <declare-styleable name="PinEntryEditText">
        <attr name="pinAnimationType" format="enum">
            <enum name="popIn" value="0" />
            <enum name="fromBottom" value="1" />
            <enum name="none" value="-1" />
        </attr>
        <attr name="pinCharacterMask" format="string" />
        <attr name="pinRepeatedHint" format="string" />
        <attr name="pinLineStroke" format="dimension" />
        <attr name="pinLineStrokeSelected" format="dimension" />
        <attr name="pinCharacterSpacing" format="dimension" />
        <attr name="pinTextBottomPadding" format="dimension" />
        <attr name="pinLineColors" format="color" />
        <attr name="pinBackgroundDrawable" format="reference" />
        <attr name="pinBackgroundIsSquare" format="boolean" />
    </declare-styleable>

    <declare-styleable name="HorizontalCalendarView">
        <!-- Default text color for all texts -->
        <attr name="textColorNormal" format="color" />
        <!-- Default top text color -->
        <attr name="colorTopText" format="color" />
        <!-- Default Middle text color -->
        <attr name="colorMiddleText" format="color" />
        <!-- Default Bottom text color -->
        <attr name="colorBottomText" format="color" />

        <!-- Selected item's text color for all texts -->
        <attr name="textColorSelected" format="color" />
        <!-- Selected item's top text color -->
        <attr name="colorTopTextSelected" format="color" />
        <!-- Selected item's Middle text color -->
        <attr name="colorMiddleTextSelected" format="color" />
        <!-- Selected item's Bottom text color -->
        <attr name="colorBottomTextSelected" format="color" />
        <!-- Selected item's background drawable -->
        <attr name="selectedDateBackground" format="reference" />

        <attr name="normalDateDayBackground" format="reference" />


        <attr name="selectedDateDayBackground" format="reference" />


        <!-- Background color for selector bar. -->
        <attr name="selectorColor" format="color" />

        <!-- Top text size -->
        <attr name="sizeTopText" format="dimension" />
        <!-- Middle text size -->
        <attr name="sizeMiddleText" format="dimension" />
        <!-- Bottom text size -->
        <attr name="sizeBottomText" format="dimension" />

    </declare-styleable>

</resources>