<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/search_hint_text_color</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/purple</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/purple
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorPrimary
        </item>
    </style>


    <style name="Transculant" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/search_hint_text_color</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">16sp</item>
        <item name="android:cursorVisible">true</item>
        <item name="colorAccent">@color/black</item>
        <item name="submitBackground">@color/search_hint</item>
        <item name="queryBackground">@color/space_transparent</item>
        <item name="fontFamily">@font/avenirltstd_book</item>
    </style>

    <style name="MyFilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/inactivetab</item>
        <item name="backgroundTint">@color/inactivetab</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="fontFamily">@font/avenirltstd_heavy</item>
    </style>

    <style name="CustomTextAppearanceTabHome" parent="CustomTextAppearanceTab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="fontFamily">@font/avenirltstd_heavy</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:background">@android:color/transparent</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="AlbumTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="fontFamily">@font/avenirltstd_heavy</item>
    </style>
    <!--<style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_window_bg</item>
    </style>-->
    <!-- Theme.AppCompat.Light is not a dialog theme -->
    <style name="DialogThemeDatepicker" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorAccent">@color/purple</item>
    </style>

    <style name="MyAppTheme" parent="android:Theme.Material">
        <item name="android:dialogTheme">@style/MyDialogTheme_datepicker</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDialogTheme_datepicker" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <!--    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">-->
    <!--        <item name="colorAccent">@color/purple</item>-->
    <!--        <item name="android:colorControlNormal">@color/purple</item>-->
    <!--    </style>-->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/purple</item>
        <item name="theme">@style/MySpinnerDatePicker</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorControlNormal">@color/purple</item>
        <item name="android:datePickerStyle">@style/MySpinnerDatePicker</item>
    </style>

    <style name="MySpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:colorControlNormal">@color/purple</item>
    </style>
