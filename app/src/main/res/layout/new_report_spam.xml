<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_400sdp"
    android:elevation="@dimen/_3sdp"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:id="@+id/ll_report_spam"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="-18dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="18dp"
        app:cardElevation="5dp"
        app:contentPadding="5dp"
        app:elevation="36dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/avenirltstd_heavy"
                    android:gravity="center"
                    android:text="@string/report_issue"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivCloseSpam"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/post_close"></ImageView>

                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/border" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">

                    <RadioButton
                        android:id="@+id/rb_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@color/white"
                        android:drawablePadding="30dp"
                        android:layoutDirection="rtl"
                        android:padding="@dimen/_15sdp"
                        style="@style/radiobuttonstyle"
                        android:text="@string/spam_1"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/_12sdp"></RadioButton>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/border" />

                    <RadioButton
                        android:id="@+id/rb_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@color/white"
                        style="@style/radiobuttonstyle"
                        android:drawablePadding="30dp"
                        android:layoutDirection="rtl"
                        android:padding="@dimen/_15sdp"
                        android:text="@string/spam_2"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/_12sdp"></RadioButton>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/border" />

                    <RadioButton
                        android:id="@+id/rb_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@color/white"
                        android:drawablePadding="30dp"
                        style="@style/radiobuttonstyle"
                        android:layoutDirection="rtl"
                        android:padding="@dimen/_15sdp"
                        android:text="@string/spam_3"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/_12sdp"></RadioButton>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/border" />

                    <RadioButton
                        android:id="@+id/rb_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@color/white"
                        style="@style/radiobuttonstyle"
                        android:drawablePadding="30dp"
                        android:layoutDirection="rtl"
                        android:padding="@dimen/_15sdp"
                        android:text="@string/spam_4"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/_12sdp"></RadioButton>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/border" />

                    <RadioButton
                        android:id="@+id/rb_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@color/white"
                        android:drawablePadding="30dp"
                        style="@style/radiobuttonstyle"
                        android:layoutDirection="rtl"
                        android:padding="@dimen/_15sdp"
                        android:text="@string/spam_5"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/_12sdp"></RadioButton>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/border" />

                    <RadioButton
                        android:id="@+id/rb_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@color/white"
                        android:drawablePadding="30dp"
                        style="@style/radiobuttonstyle"
                        android:layoutDirection="rtl"
                        android:padding="@dimen/_15sdp"
                        android:text="@string/spam_6"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/_12sdp"></RadioButton>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/border" />

                </RadioGroup>

                <Button
                    android:id="@+id/btnReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/button_border"
                    android:fontFamily="@font/avenirltstd_black"
                    android:paddingLeft="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:paddingRight="25dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:paddingBottom="5dp"
                    android:text="@string/report"
                    android:textColor="@color/white" />


            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
