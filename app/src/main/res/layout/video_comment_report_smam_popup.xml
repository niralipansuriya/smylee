<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/avenirltstd_heavy"
                android:gravity="center"
                android:text="@string/report_issue"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:layout_centerInParent="true"
                android:id="@+id/ll_close"
                android:layout_alignParentRight="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivCloseSpam"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/post_close"></ImageView>

            </LinearLayout>


        </RelativeLayout>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@color/white"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backSpam"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/back" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:fontFamily="@font/avenirltstd_heavy"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/_15sdp"
                        android:text="@string/report_issue"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenirltstd_book"
                android:text="@string/report_header"
                android:textColor="@color/light_purple"
                android:textSize="@dimen/_14sdp"></TextView>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_spam_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/avenirltstd_black"
                android:text="@string/spam_1"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"></TextView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/border" />

            <TextView
                android:id="@+id/tv_spam_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/avenirltstd_black"
                android:text="@string/spam_2"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"></TextView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/border" />

            <TextView
                android:id="@+id/tv_spam_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/avenirltstd_black"
                android:text="@string/spam_3"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"></TextView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/border" />

            <TextView
                android:id="@+id/tv_spam_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/avenirltstd_black"
                android:text="@string/spam_4"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"></TextView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/border" />

            <TextView
                android:id="@+id/tv_spam_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/avenirltstd_black"
                android:text="@string/spam_5"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"></TextView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/border" />

            <TextView
                android:id="@+id/tv_spam_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/avenirltstd_black"
                android:text="@string/spam_6"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"></TextView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/border" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>